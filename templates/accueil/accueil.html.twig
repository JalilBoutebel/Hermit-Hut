{% extends 'base.html.twig' %}


{% block body %}

    <h1 class="r">Bienvenue sur Hermit's Hut</h1>
    <p class="lead">Votre boutique en ligne de jeux video</p>

    <div class="container text-center">
        <div class="row">
            {% for categorie in categories %}
            <div class="col-12 col-sm-6 col-md-3 mb-4 col-custom">
            <a href="/jeux/{{ categorie.id }}">
                {{ categorie.libelle }}
                <img src="{{ categorie.image }}" class="card-img-top img-fluid img-small" alt="">
            </a>
        </div>
            {% endfor %}
    </div>

{% endblock %}
