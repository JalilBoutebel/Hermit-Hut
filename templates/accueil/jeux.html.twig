{% extends 'base.html.twig' %}
{% block body %}
<div class="container text-center">
    <div class="row">
        {% for jeu in categorie.jeux %}
            <div class="col-12 col-sm-6 col-md-3 mb-4">
                <div class="card game-card">
                    <h5 class="card-title">{{ jeu.libelle }}</h5>
                    <img src="{{ asset(jeu.image) }}" 
                         class="card-img-top game-image" 
                         alt="{{ jeu.libelle }}"
                         style="cursor: pointer;" 
                         data-jeu-id="{{ jeu.id }}"
                         data-jeu-libelle="{{ jeu.libelle }}"
                         data-jeu-image="{{ asset(jeu.image) }}"
                         data-jeu-categorie="{{ jeu.categorie.libelle }}"
                         data-jeu-description="{{ jeu.description }}"
                         data-jeu-prix="{{ jeu.prix }}">
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<!-- Modal Popup -->
<div id="gameModal" class="game-modal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <div id="modalBody"></div>
    </div>
</div>

<style>
/* Style de la carte */
.game-card {
    background: rgba(26, 26, 46, 0.8);
    border: 2px solid #0ce44cff;
    border-radius: 10px;
    padding: 15px;
    transition: transform 0.3s;
    width: 100%; /* S'adapte au conteneur */
    max-width: none; /* Pas de limitation */
}

.game-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 20px rgba(12, 228, 76, 0.4);
}

.card-title {
    color: #0ce44cff;
    font-weight: bold;
    margin-bottom: 10px;
}

.game-image {
    width: 100%;
    height: 380px;
    object-fit: cover;
    border-radius: 8px;
    transition: transform 0.3s;
}

.game-image:hover {
    transform: scale(1.05);
}

/* Style du modal */
.game-modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.85);
    animation: fadeIn 0.3s;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.modal-content {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    margin: 5% auto;
    padding: 30px;
    border: 2px solid #0ce44cff;
    border-radius: 15px;
    width: 90%;
    max-width: 600px;
    position: relative;
    box-shadow: 0 0 30px rgba(17, 235, 90, 0.5);
    animation: slideDown 0.4s;
}

@keyframes slideDown {
    from {
        transform: translateY(-50px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.close-modal {
    color: #00ff00ff;
    float: right;
    font-size: 35px;
    font-weight: bold;
    cursor: pointer;
    line-height: 20px;
    transition: all 0.3s;
}

.close-modal:hover,
.close-modal:focus {
    color: #ff0055;
}

.details-content {
    text-align: center;
    color: #fff;
    font-family: 'Roboto', sans-serif;
}

.details-img {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 0 20px #9ee913ff;
    margin: 15px 0;
}

.price {
    color: #8ae414ff;
    font-weight: bold;
    margin-top: 15px;
    font-size: 1.5rem;
    text-shadow: 0 0 10px #74e914ff;
}

.btn-add {
    background: linear-gradient(135deg, #17e74bff, #14e65aff);
    color: white;
    padding: 12px 25px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    display: inline-block;
    margin-top: 12px;
    transition: all 0.3s;
    box-shadow: 0 5px 15px rgba(0, 255, 42, 0.3);
    border: none;
    cursor: pointer;
}

.btn-add:hover {
    background: linear-gradient(135deg, #85ec0fff, #a8f31cff);
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(20, 189, 14, 0.5);
}

/* Responsive */
@media (max-width: 768px) {
    .modal-content {
        width: 100%;
        margin: 10% auto;
        padding: 20px;
    }
    
    
}

@media (max-width: 576px) {
    /* Les images gardent toujours leur hauteur */
    .game-image {
        height: 380px;
        min-height: 380px;
    }
    
    .game-card {
        padding: 10px;
    }
}
</style>
{% endblock %}