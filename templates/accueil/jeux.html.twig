{% extends 'base.html.twig' %}


{% block body %}

    <h1 class="r">Bienvenue sur Hermit's Hut</h1>
    <p class="lead">Votre boutique en ligne de jeux video</p>

    <div class="container text-center">
        <div class="row">
        <div class="col-12">
            {{ categorie.libelle }}
        </div>
            {% for jeu in categorie.jeux %}
            <div class="col-12 col-sm-6 col-md-3 mb-4 col-custom">
                {{ jeu.libelle }}
                <img src="{{ asset(jeu.image) }}" class="card-img-top" height="350">
                <a href="{{ path('app_add_panier', {id: jeu.id}) }}" class="btn btn-success">AJOUTER</a>

        </div>
            {% endfor %}
    </div>

{% endblock %}
