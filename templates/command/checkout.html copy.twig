{% extends 'base.html.twig' %}

{% block title %}‚úÖ Finaliser ma commande - Hermit's Hut{% endblock %}

{% block body %}
<div class="command-wrapper">
    <div class="command-container">
        <h1>‚úÖ Finaliser ma commande</h1>
        
        <p class="welcome-text">Bonjour {{ app.user.prenom }} ! üéÆ</p>

        {# R√©capitulatif du panier #}
        <div class="recap-section">
            <h2>üì¶ R√©capitulatif de votre panier</h2>
            
            {% if panier is empty %}
                <p class="empty-message">Votre panier est vide.</p>
                <a href="{{ path('app_accueil') }}" class="btn-secondary">Retour √† la boutique</a>
            {% else %}
                <table class="recap-table">
                    <thead>
                        <tr>
                            <th>Jeu</th>
                            <th>Prix unitaire</th>
                            <th>Quantit√©</th>
                            <th>Sous-total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set total = 0 %}
                        {% for item in panier %}
                            {% set jeu = item.jeu %}
                            {% set quantite = item.quantite %}
                            {% set sous_total = jeu.prix * quantite %}
                            {% set total = total + sous_total %}
                            <tr>
                                <td>
                                    <strong>{{ jeu.libelle }}</strong>
                                    {% if jeu.image %}
                                        <br>
                                        <img src="{{ asset(jeu.image) }}" 
                                             alt="{{ jeu.libelle }}" 
                                             height="60" class="jeu-img">
                                    {% endif %}
                                </td>
                                <td>{{ jeu.prix }} ‚Ç¨</td>
                                <td>{{ quantite }}</td>
                                <td>{{ sous_total }} ‚Ç¨</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                
                <p class="total-command">üí∞ Total : <strong>{{ total }} ‚Ç¨</strong></p>

                {# Formulaire d'adresse de livraison #}
                <div class="form-section">
                    <h2>üìç Adresse de livraison</h2>
                    
                    <form method="post" action="{{ path('app_command_process') }}" class="command-form">
                        <div class="form-group">
                            <label for="nom">Nom complet</label>
                            <input type="text" id="nom" name="nom" 
                                   value="{{ app.user.nom ~ ' ' ~ app.user.prenom }}" 
                                   required>
                        </div>

                        <div class="form-group">
                            <label for="adresse">Adresse</label>
                            <input type="text" id="adresse" name="adresse" 
                                   placeholder="Ex: 123 Rue de la Galaxie" required>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="code_postal">Code postal</label>
                                <input type="text" id="code_postal" name="code_postal" 
                                       placeholder="Ex: 75001" required>
                            </div>

                            <div class="form-group">
                                <label for="ville">Ville</label>
                                <input type="text" id="ville" name="ville" 
                                       placeholder="Ex: Paris" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="pays">Pays</label>
                            <input type="text" id="pays" name="pays" 
                                   value="France" required>
                        </div>

                        <div class="form-group">
                            <label for="telephone">T√©l√©phone</label>
                            <input type="tel" id="telephone" name="telephone" 
                                   placeholder="Ex: 06 12 34 56 78" required>
                        </div>

                        {# Mode de paiement #}
                        <h2>üí≥ Mode de paiement</h2>
                        
                        <div class="payment-options">
                            <label class="payment-option">
                                <input type="radio" name="paiement" value="carte" checked>
                                <span>üí≥ Carte bancaire</span>
                            </label>
                            
                            <label class="payment-option">
                                <input type="radio" name="paiement" value="paypal">
                                <span>üîµ PayPal</span>
                            </label>
                            
                            <label class="payment-option">
                                <input type="radio" name="paiement" value="carte_bancaire" id="carte_bancaire">
                                <label for="carte_bancaire">Carte bancaire</label>
                            </label>
                        </div>

                        <div class="form-actions">
                            <a href="{{ path('app_panier') }}" class="btn-secondary">‚Üê Retour au panier</a>
                            <button type="submit" class="btn-primary">Confirmer la commande üöÄ</button>
                        </div>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
/* üåå Arri√®re-plan global */
body {
    background-attachment: fixed;
    font-family: 'Orbitron', sans-serif;
    color: #fff;
    min-height: 100vh;
    margin: 0;
}

/* üå´Ô∏è Conteneur centr√© */
.command-wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 60px 15px;
}

/* ‚úÖ Bloc de commande */
.command-container {
    width: 100%;
    max-width: 1000px;
    background: rgba(0, 0, 0, 0.65);
    border-radius: 15px;
    padding: 30px 40px;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.25);
    backdrop-filter: blur(10px);
}

/* üß† Titre */
.command-container h1 {
    text-align: center;
    color: #20dd75ff;
    margin-bottom: 20px;
    text-shadow: 0 0 10px #11cc75ff;
    font-weight: 700;
}

.command-container h2 {
    color: #0dd34fff;
    margin-top: 30px;
    margin-bottom: 20px;
    text-shadow: 0 0 8px #0dd34fff;
    font-size: 1.5rem;
}

.welcome-text {
    text-align: center;
    color: #8dd617ff;
    font-size: 1.2rem;
    margin-bottom: 30px;
}

/* üì¶ Section r√©capitulatif */
.recap-section {
    margin-top: 20px;
}

/* üßæ Tableau r√©capitulatif */
.recap-table {
    width: 100%;
    border-collapse: collapse;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 20px;
}

.recap-table th {
    background: rgba(0, 255, 255, 0.15);
    color: #0dd34fff;
    text-transform: uppercase;
    padding: 15px;
    letter-spacing: 1px;
    font-size: 0.9rem;
}

.recap-table td {
    padding: 15px;
    color: #f0f0f0;
    vertical-align: middle;
    text-align: center;
}

.recap-table tr:nth-child(even) {
    background: rgba(255, 255, 255, 0.05);
}

/* üéÆ Images des jeux */
.jeu-img {
    border-radius: 8px;
    margin-top: 8px;
    box-shadow: 0 0 8px rgba(0, 255, 255, 0.3);
}

/* üí∞ Total */
.total-command {
    margin-top: 25px;
    text-align: right;
    font-size: 1.5rem;
    color: #8dd617ff;
    font-weight: bold;
    text-shadow: 0 0 10px rgba(142, 238, 31, 0.7);
}

/* üìù Formulaire */
.form-section {
    margin-top: 40px;
}

.command-form {
    margin-top: 20px;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    color: #0dd34fff;
    font-weight: 600;
    margin-bottom: 8px;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
}

.form-group input {
    width: 100%;
    padding: 12px 15px;
    background: rgba(0, 0, 0, 0.5);
    border: 2px solid rgba(13, 211, 79, 0.3);
    border-radius: 8px;
    color: #fff;
    font-size: 1rem;
    font-family: 'Orbitron', sans-serif;
    transition: all 0.3s ease;
    box-sizing: border-box;
}

.form-group input:focus {
    outline: none;
    border-color: #20dd75ff;
    box-shadow: 0 0 15px rgba(32, 221, 117, 0.4);
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}

/* üí≥ Options de paiement */
.payment-options {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-top: 20px;
}

.payment-option {
    display: flex;
    align-items: center;
    padding: 15px 20px;
    background: rgba(0, 0, 0, 0.4);
    border: 2px solid rgba(13, 211, 79, 0.3);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.payment-option:hover {
    background: rgba(32, 221, 117, 0.1);
    border-color: #20dd75ff;
}

.payment-option input[type="radio"] {
    margin-right: 15px;
    width: 20px;
    height: 20px;
    accent-color: #20dd75ff;
}

.payment-option span {
    color: #f0f0f0;
    font-size: 1.1rem;
}

/* üéØ Actions du formulaire */
.form-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 40px;
    gap: 20px;
}

/* üéÆ Boutons */
.btn-primary {
    padding: 15px 40px;
    background: linear-gradient(135deg, #20dd75ff, #0dd34fff);
    color: #000;
    font-weight: bold;
    font-size: 1.1rem;
    text-decoration: none;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0 0 20px rgba(32, 221, 117, 0.5);
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #91f71cff, #20dd75ff);
    transform: translateY(-3px);
    box-shadow: 0 0 30px rgba(145, 247, 28, 0.7);
}

.btn-secondary {
    padding: 15px 30px;
    background: rgba(255, 255, 255, 0.1);
    color: #0dd34fff;
    font-weight: bold;
    text-decoration: none;
    border-radius: 10px;
    border: 2px solid #0dd34fff;
    transition: all 0.3s ease;
    display: inline-block;
}

.btn-secondary:hover {
    background: rgba(13, 211, 79, 0.2);
    transform: translateY(-2px);
}

/* üß© Message panier vide */
.empty-message {
    text-align: center;
    color: #ccc;
    font-style: italic;
    margin: 40px 0;
    font-size: 1.1rem;
}

/* üì± Responsive */
@media (max-width: 768px) {
    .command-container {
        padding: 20px;
    }
    
    .form-row {
        grid-template-columns: 1fr;
    }
    
    .form-actions {
        flex-direction: column-reverse;
    }
    
    .btn-primary, .btn-secondary {
        width: 100%;
        text-align: center;
    }
    
    .recap-table th, .recap-table td {
        padding: 10px;
        font-size: 0.85rem;
    }
}
</style>
{% endblock %}