{% extends 'base.html.twig' %}

{% block title %}Contact - Hermit's Hut{% endblock %}

{% block body %}
<style>
/* üåå Style global */
.contact-page {
    font-family: 'Orbitron', sans-serif;
    color: #fff;
    min-height: 100vh;
}
/* üì¨ Conteneur principal */
.contact-container {
    max-width: 600px;
    margin: 80px auto;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(6px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 15px;
    padding: 30px 40px;
    box-shadow: 0 0 25px rgba(0, 255, 255, 0.15);
}

/* üß† Titre */
.contact-container h1 {
    text-align: center;
    color: #f7f7f7ff;
    margin-bottom: 25px;
    text-shadow: 0 0 10px #ecececff;
    font-weight: 700;
}

/* ‚úâÔ∏è Champs */
form div {
    margin-bottom: 20px;
}

label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
    color: #1afd4bff;
    text-align : center;
}

input[type="text"],
input[type="email"],
textarea {
    width: 100%;
    padding: 12px 15px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    color: #ffffffff;
    font-size: 1rem;
    transition: 0.3s ease;
}

input:focus,
textarea:focus {
    outline: none;
}

/* üöÄ Bouton */
button, input[type="submit"] {
    border: none;
    color: #ffffffff;
    padding: 12px 30px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    letter-spacing: 1px;
    font-weight: bold;
    transition: 0.3s ease;
    width: 100%;
    background: #89fc1dff;
}

button:hover, input[type="submit"]:hover {
    transform: scale(1.05);
}

/* ‚úÖ Message de succ√®s */
.alert-success {
    background: rgba(0, 255, 127, 0.1);
    border: 1px solid rgba(0, 255, 127, 0.3);
    color: #00ff95;
    padding: 10px 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
}
</style>
