{% extends 'base.html.twig' %}
{% block title %}Inscription - Hermit's Hut{% endblock %}

{% block body %}
<style>
/* üåå Style global */
.inscription-page {
    font-family: 'Orbitron', sans-serif;
    color: #fff;
    min-height: 100vh;
    padding-top: 80px;
    padding-bottom: 50px;
}

/* üì¨ Conteneur principal */
.inscription-container {
    max-width: 500px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(6px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 15px;
    padding: 40px;
    box-shadow: 0 0 25px rgba(0, 255, 255, 0.15);
}

/* üß† Titre */
.inscription-container h1 {
    text-align: center;
    color: #f7f7f7ff;
    margin-bottom: 20px;
    text-shadow: 0 0 10px #ecececff;
    font-weight: 700;
    font-size: 2rem;
}

/* Description */
.info-text {
    text-align: center;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 30px;
    line-height: 1.6;
    font-size: 0.95rem;
}

/* ‚úâÔ∏è Champs */
.form-group {
    margin-bottom: 25px;
}

label {
    display: block;
    margin-bottom: 10px;
    font-weight: bold;
    color: #1afd4bff;
    text-align: center;
    font-size: 1rem;
}

input[type="text"],
input[type="email"] {
    width: 100%;
    padding: 14px 18px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    color: #ffffffff;
    font-size: 1rem;
    transition: 0.3s ease;
    box-sizing: border-box;
}

input:focus {
    outline: none;
    border-color: #1afd4bff;
    box-shadow: 0 0 10px rgba(26, 253, 75, 0.3);
}

input::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

/* üöÄ Bouton */
button[type="submit"] {
    width: 100%;
    border: none;
    background: linear-gradient(135deg, #1afd4bff 0%, #00d9ff 100%);
    color: #fff;
    padding: 14px 30px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1.1rem;
    letter-spacing: 1px;
    font-weight: bold;
    transition: 0.3s ease;
    margin-top: 10px;
}

button[type="submit"]:hover {
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(26, 253, 75, 0.5);
}

/* ‚úÖ Messages */
.alert-danger {
    background: rgba(255, 0, 0, 0.15);
    border: 1px solid rgba(255, 0, 0, 0.4);
    color: #ff6b6b;
    padding: 12px 18px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
}

.alert-success {
    background: rgba(0, 255, 127, 0.1);
    border: 1px solid rgba(0, 255, 127, 0.3);
    color: #00ff95;
    padding: 12px 18px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
}

/* Erreurs de formulaire */
.form-errors {
    color: #ff6b6b;
    font-size: 0.9rem;
    margin-top: 8px;
    text-align: center;
}

.form-errors ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

/* Liens */
.link-section {
    text-align: center;
    margin-top: 25px;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.link-section p {
    margin: 0;
    color: #fff;
}

.link-section a {
    color: #1afd4bff;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
}

.link-section a:hover {
    color: #00d9ff;
    text-shadow: 0 0 10px rgba(26, 253, 75, 0.5);
}

/* Style Symfony Form */
form > div {
    margin-bottom: 25px;
}

form label {
    display: block;
    margin-bottom: 10px;
    font-weight: bold;
    color: #1afd4bff;
    text-align: center;
    font-size: 1rem;
}

form input[type="text"],
form input[type="email"] {
    width: 100%;
    padding: 14px 18px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    color: #ffffffff;
    font-size: 1rem;
    transition: 0.3s ease;
    box-sizing: border-box;
}

form button {
    width: 100%;
    border: none;
    background: linear-gradient(135deg, #1afd4bff 0%, #00d9ff 100%);
    color: #fff;
    padding: 14px 30px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1.1rem;
    letter-spacing: 1px;
    font-weight: bold;
    transition: 0.3s ease;
    margin-top: 10px;
}
</style>

<div class="inscription-page">
    <div class="inscription-container">
        <h1>Inscription üìù</h1>
        
        {% for message in app.flashes('error') %}
            <div class="alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('success') %}
            <div class="alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        <p class="info-text">
            Cr√©ez votre compte en renseignant les informations ci-dessous. 
            Vous recevrez un email pour finaliser votre inscription.
        </p>
        
        {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
            {{ form_row(form.email) }}
            {{ form_row(form.Envoyer) }}
        {{ form_end(form) }}
        
        <div class="link-section">
            <p>Vous avez d√©j√† un compte ? 
                <a href="{{ path('app_login') }}">Se connecter</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}