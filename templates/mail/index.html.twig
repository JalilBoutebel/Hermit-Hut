{% extends 'base.html.twig' %}

{% block title %}Contact - Hermit's Hut{% endblock %}

{% block body %}
<style>
/* üåå Style global */
body {
    background: linear-gradient(135deg, #0f2027, #a0bd20ff, #738f3fff);
    font-family: 'Orbitron', sans-serif;
    color: #fff;
    min-height: 100vh;
}

/* üì¨ Conteneur principal */
.contact-container {
    max-width: 600px;
    margin: 80px auto;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(6px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 15px;
    padding: 30px 40px;
    box-shadow: 0 0 25px rgba(0, 255, 255, 0.15);
}

/* üß† Titre */
.contact-container h1 {
    text-align: center;
    color: #00fff7;
    margin-bottom: 25px;
    text-shadow: 0 0 10px #00fff7;
    font-weight: 700;
}

/* ‚úâÔ∏è Champs */
form div {
    margin-bottom: 20px;
}

label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #00d4ff;
}

input[type="text"],
input[type="email"],
textarea {
    width: 100%;
    padding: 12px 15px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    color: #fff;
    font-size: 1rem;
    transition: 0.3s ease;
}

input:focus,
textarea:focus {
    outline: none;
    border-color: #00fff7;
    box-shadow: 0 0 10px #00fff7;
}

/* üöÄ Bouton */
button, input[type="submit"] {
    background: linear-gradient(90deg, #00d4ff, #007bff);
    border: none;
    color: #fff;
    padding: 12px 30px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    letter-spacing: 1px;
    font-weight: bold;
    width: 100%;
    transition: 0.3s ease;
}

button:hover, input[type="submit"]:hover {
    transform: scale(1.05);
    box-shadow: 0 0 20px #00d4ff;
}

/* ‚úÖ Message de succ√®s */
.alert-success {
    background: rgba(0, 255, 127, 0.1);
    border: 1px solid rgba(0, 255, 127, 0.3);
    color: #00ff95;
    padding: 10px 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
}
</style>

<div class="contact-container">
    <h1>Contactez-nous üí¨</h1>

    {% for message in app.flashes('success') %}
        <div class="alert-success">{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.message) }}
        {{ form_row(form.Envoyer) }}
    {{ form_end(form) }}
</div>
{% endblock %}

