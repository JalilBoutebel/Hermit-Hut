{% extends 'base.html.twig' %}

{% block title %}üõí Mon Panier - Hermit's Hut{% endblock %}

{% block body %}
<div class="panier-wrapper">
    <div class="panier-container">
        <h1>üõí Mon Panier</h1>

        {% if panier is empty %}
            <p class="text-center empty-message">Votre panier est vide.</p>
        {% else %}
            <div class="table-responsive">
                <table class="panier-table">
                    <thead>
                        <tr>
                            <th>Jeu</th>
                            <th>Prix</th>
                            <th>Quantit√©</th>
                            <th>Sous-total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set total = 0 %}
                        {% for item in panier %}
                            {% set sous_total = item.jeu.prix * item.quantite %}
                            {% set total = total + sous_total %}
                            <tr>
                                <td>
                                    <strong>{{ item.jeu.libelle }}</strong><br>
                                    {% if item.jeu.image %}
                                        <img src="{{ asset(item.jeu.image) }}" 
                                             alt="{{ item.jeu.libelle }}" 
                                             height="80" class="jeu-img">
                                    {% endif %}
                                </td>
                                <td>{{ item.jeu.prix }} ‚Ç¨</td>
                                <td>{{ item.quantite }}</td>
                                <td>{{ sous_total }} ‚Ç¨</td>
                                <td>
                                    <a href="{{ path('app_del_panier', {id: item.jeu.id}) }}" class="btn-action">‚ûñ</a>
                                    <a href="{{ path('app_add_panier', {id: item.jeu.id}) }}" class="btn-action">‚ûï</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <p class="total">üí∞ Total : <strong>{{ total }} ‚Ç¨</strong></p>
        {% endif %}
    </div>
</div>

<style>
/* üåå Arri√®re-plan global */
body {
    background-attachment: fixed;
    font-family: 'Orbitron', sans-serif;
    color: #fff;
    min-height: 100vh;
    margin: 0;
}

/* üå´Ô∏è Conteneur centr√© */
.panier-wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 60px 15px;
}

/* üõí Bloc du panier */
.panier-container {
    width: 100%;
    max-width: 900px;
    background: rgba(0, 0, 0, 0.65);
    border-radius: 15px;
    padding: 30px 40px;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.25);
    backdrop-filter: blur(10px);
}

/* üß† Titre */
.panier-container h1 {
    text-align: center;
    color: #20dd75ff;
    margin-bottom: 30px;
    text-shadow: 0 0 10px #11cc75ff;
    font-weight: 700;
}

/* üßæ Tableau */
.panier-table {
    width: 100%;
    border-collapse: collapse;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 12px;
    overflow: hidden;
}

.panier-table th {
    background: rgba(0, 255, 255, 0.15);
    color: #0dd34fff;
    text-transform: uppercase;
    padding: 15px;
    letter-spacing: 1px;
    font-size: 0.9rem;
}

.panier-table td {
    padding: 15px;
    color: #f0f0f0;
    vertical-align: middle;
    text-align: center;
}

.panier-table tr:nth-child(even) {
    background: rgba(255, 255, 255, 0.05);
}

/* üéÆ Images des jeux */
.jeu-img {
    border-radius: 8px;
    margin-top: 8px;
    box-shadow: 0 0 8px rgba(0, 255, 255, 0.3);
    transition: transform 0.3s ease;
}
.jeu-img:hover {
    transform: scale(1.1);
}

/* ‚ûï‚ûñ Boutons */
.btn-action {
    color: #15df80ff;
    font-size: 1.3rem;
    font-weight: bold;
    margin: 0 5px;
    transition: all 0.3s ease;
}
.btn-action:hover {
    color: #91f71cff;
    text-shadow: 0 0 10px #0be97aff;
}

/* üí∞ Total */
.total {
    margin-top: 25px;
    text-align: right;
    font-size: 1.3rem;
    color: #8dd617ff;
    font-weight: bold;
    text-shadow: 0 0 10px rgba(142, 238, 31, 0.7);
}

/* üß© Message panier vide */
.empty-message {
    text-align: center;
    color: #ccc;
    font-style: italic;
    margin-top: 20px;
}

/* üì± Responsive */
@media (max-width: 768px) {
    .panier-container {
        padding: 20px;
    }
    .panier-table th, .panier-table td {
        padding: 10px;
        font-size: 0.85rem;
    }
    .total {
        text-align: center;
        margin-top: 15px;
    }
}
</style>
{% endblock %}
