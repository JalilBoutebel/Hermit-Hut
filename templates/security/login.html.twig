{% extends 'base.html.twig' %}
{% block title %}Connexion - Hermit's Hut{% endblock %}

{% block body %}
<style>
/* üåå Style global */
.login-page {
    font-family: 'Orbitron', sans-serif;
    color: #fff;
    min-height: 100vh;
    padding-top: 80px;
    padding-bottom: 50px;
}

/* üì¨ Conteneur principal */
.login-container {
    max-width: 500px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(6px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 15px;
    padding: 40px;
    box-shadow: 0 0 25px rgba(0, 255, 255, 0.15);
}

/* üß† Titre */
.login-container h1 {
    text-align: center;
    color: #f7f7f7ff;
    margin-bottom: 30px;
    text-shadow: 0 0 10px #ecececff;
    font-weight: 700;
    font-size: 2rem;
}

/* ‚úâÔ∏è Champs */
form > div {
    margin-bottom: 25px;
}

label {
    display: block;
    margin-bottom: 10px;
    font-weight: bold;
    color: #1afd4bff;
    text-align: center;
    font-size: 1rem;
}

input[type="text"],
input[type="email"],
input[type="password"] {
    width: 100%;
    padding: 14px 18px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    color: #ffffffff;
    font-size: 1rem;
    transition: 0.3s ease;
    box-sizing: border-box;
}

input:focus {
    outline: none;
    border-color: #1afd4bff;
    box-shadow: 0 0 10px rgba(26, 253, 75, 0.3);
}

input::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

/* üöÄ Bouton */
button[type="submit"] {
    width: 100%;
    border: none;
    background: linear-gradient(135deg, #1afd4bff 0%, #00d9ff 100%);
    color: #fff;
    padding: 14px 30px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1.1rem;
    letter-spacing: 1px;
    font-weight: bold;
    transition: 0.3s ease;
    margin-top: 10px;
}

button[type="submit"]:hover {
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(26, 253, 75, 0.5);
}

/* Checkbox Remember Me */
.checkbox-container {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20px 0;
}

.checkbox-container input[type="checkbox"] {
    width: auto;
    margin-right: 10px;
    cursor: pointer;
    accent-color: #1afd4bff;
}

.checkbox-container label {
    margin: 0;
    color: #fff;
    font-weight: normal;
    cursor: pointer;
}

/* ‚úÖ Message d'erreur */
.alert-danger {
    background: rgba(255, 0, 0, 0.15);
    border: 1px solid rgba(255, 0, 0, 0.4);
    color: #ff6b6b;
    padding: 12px 18px;
    border-radius: 8px;
    margin-bottom: 25px;
    text-align: center;
}

/* Info utilisateur connect√© */
.user-info {
    background: rgba(0, 255, 127, 0.1);
    border: 1px solid rgba(0, 255, 127, 0.3);
    color: #00ff95;
    padding: 12px 18px;
    border-radius: 8px;
    margin-bottom: 25px;
    text-align: center;
}

.user-info a {
    color: #1afd4bff;
    text-decoration: underline;
    font-weight: bold;
}

/* Liens */
.link-section {
    text-align: center;
    margin-top: 25px;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.link-section p {
    margin: 10px 0;
    color: #fff;
}

.link-section a {
    color: #1afd4bff;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
}

.link-section a:hover {
    color: #d9ff00ff;
    text-shadow: 0 0 10px rgba(26, 253, 75, 0.5);
}
</style>

<div class="login-page">
    <div class="login-container">
        <h1>Se connecter üîê</h1>
        
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        {% if app.user %}
            <div class="user-info">
                Vous √™tes connect√©(e), {{ app.user.userIdentifier }}, 
                <a href="{{ path('app_logout') }}">Se d√©connecter</a>
            </div>
        {% endif %}
        
        <form method="post">
            <div>
                <label for="inputEmail">Email</label>
                <input type="email" 
                       value="{{ last_username }}" 
                       name="_username" 
                       id="inputEmail" 
                       placeholder="votre@email.com"
                       autocomplete="email" 
                       required 
                       autofocus>
            </div>
            
            <div>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" 
                       name="_password" 
                       id="inputPassword" 
                       placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                       autocomplete="current-password" 
                       required>
            </div>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <div class="checkbox-container">
                <input type="checkbox" name="_remember_me" id="remember_me">
                <label for="remember_me">Se souvenir de moi</label>
            </div>
            
            <button type="submit">Se connecter</button>
            
            <div class="link-section">
                <p>Pas encore de compte ? 
                    <a href="{{ path('app_inscription') }}">Cr√©er un compte</a>
                </p>
                <p><a href="#">Mot de passe oubli√© ?</a></p>
            </div>
        </form>
    </div>
</div>
{% endblock %}